{
  "name": "nova",
  "version": "1.0.0",
  "author": "Julio César Castro López <julio.castro.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format:check": "prettier --check '**/*.ts'",
    "format:fix": "prettier --write '**/*.ts'",
    "build:check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "run-checks": "yarn format:check && yarn lint && yarn build:check",
    "build": "tsc",
    "start": "yarn build && node ./dist",
    "start:dev": "nodemon ./src/index.ts"
  },
  "dependencies": {
    "express": "^4.17.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
