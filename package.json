{
  "name": "member-nominations",
  "version": "1.0.0",
  "author": "Julio César Castro López <julio.castro.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format:check": "prettier --check '**/*.ts'",
    "format:fix": "prettier --write '**/*.ts'",
    "build:check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "run-checks": "yarn format:check && yarn lint && yarn build:check",
    "build": "tsc",
    "prestart": "yarn build",
    "start:node": "node ./dist/src",
    "start": "nodemon ./src/index.ts --ext ts",
    "persistence:clean": "rm -rf persistence",
    "test:unitary": "jest --testRegex '\\.spec.ts$'",
    "test:integration": "jest --testRegex '\\.integration-spec.ts$' --maxWorkers 1 --setupFilesAfterEnv './test/setup/cleanPersistenceBetweenTests.ts'",
    "test:e2e": "jest --testRegex '\\.e2e-spec.ts$' --maxWorkers 1 --setupFilesAfterEnv './test/setup/cleanPersistenceBetweenTests.ts'",
    "test": "yarn test:unitary && yarn test:integration && yarn test:e2e",
    "seed": "ts-node ./scripts/seed.ts"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
